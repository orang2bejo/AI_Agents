# =============================================================================
# JARVIS AI CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# LLM PROVIDER API KEYS
# =============================================================================

# Google Gemini API Key
GOOGLE_API_KEY=your_google_api_key_here

# OpenAI API Key
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Claude API Key
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Groq API Key
GROQ_API_KEY=your_groq_api_key_here

# Cohere API Key
COHERE_API_KEY=your_cohere_api_key_here

# Hugging Face API Key
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# OpenRouter API Key (unified access to multiple LLM providers)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# DeepSeek API Key
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Qwen API Key
QWEN_API_KEY=your_qwen_api_key_here

# Gemini API Key (alternative to GOOGLE_API_KEY)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# VOICE & SPEECH SERVICES
# =============================================================================

# Azure Speech Services
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Google Cloud Speech-to-Text
GOOGLE_CLOUD_SPEECH_KEY=your_google_cloud_speech_key_here

# ElevenLabs TTS API Key
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Hume.ai EVI (Empathic Voice Interface)
HUME_API_KEY=your_hume_api_key_here
HUME_SECRET_KEY=your_hume_secret_key_here

# =============================================================================
# WEB SEARCH & INFORMATION
# =============================================================================

# Google Custom Search API
GOOGLE_SEARCH_API_KEY=your_google_search_api_key_here
GOOGLE_SEARCH_ENGINE_ID=your_google_search_engine_id_here

# Bing Search API
BING_SEARCH_API_KEY=your_bing_search_api_key_here

# Serper API (Google Search alternative)
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# OFFICE & PRODUCTIVITY
# =============================================================================

# Microsoft Graph API (for Office 365 integration)
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=your_microsoft_tenant_id_here

# =============================================================================
# SECURITY & ENCRYPTION
# =============================================================================

# Encryption key for sensitive data (generate a strong random key)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# JWT Secret for session management
JWT_SECRET=your_jwt_secret_key_here

# =============================================================================
# DATABASE & STORAGE
# =============================================================================

# Database URL (if using external database)
DATABASE_URL=sqlite:///jarvis.db

# Redis URL (for caching)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Environment (development, production, testing)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum conversation history length
MAX_CONVERSATION_HISTORY=50

# Session timeout in minutes
SESSION_TIMEOUT=30

# =============================================================================
# OLLAMA CONFIGURATION (for local LLM)
# =============================================================================

# Ollama server URL
OLLAMA_BASE_URL=http://localhost:11434

# Default Ollama model
OLLAMA_MODEL=llama2

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Sentry DSN for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Application Insights key
APPINSIGHTS_INSTRUMENTATION_KEY=your_appinsights_key_here

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable voice input/output
ENABLE_VOICE=true

# Enable GUI automation
ENABLE_GUI=true

# Enable web search
ENABLE_WEB_SEARCH=true

# Enable office automation
ENABLE_OFFICE=true

# Enable self-evolution
ENABLE_EVOLUTION=true

# Enable security features
ENABLE_SECURITY=true

# Enable observability
ENABLE_OBSERVABILITY=true